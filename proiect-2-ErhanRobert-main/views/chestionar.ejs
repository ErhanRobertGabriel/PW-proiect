<h2>Testează-ți cunoștințele!</h2>

<form action="/rezultat-chestionar" method="POST">
  <% intrebari.forEach((intrebare, index) => { %>
    <fieldset style="margin-bottom: 20px;">
      <legend><%= intrebare.intrebare %></legend>

      <% intrebare.variante.forEach((varianta, i) => { %>
        <label>
          <input type="radio" name="raspunsuri[<%= index %>]" value="<%= i %>" required>
          <%= varianta %>
        </label><br>
      <% }) %>
    </fieldset>
  <% }) %>

  <button type="submit">Trimite răspunsurile</button>
</form>
